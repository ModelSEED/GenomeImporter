{
    "ver": "0.0.1",
    "authors": [
        "chenry"
    ],
    "contact": "https://kbase.us/contact-us/",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": "no-display"
    },
    "parameters": [ 
        {
            "id": "genome_ids",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "textarea",
            "textarea_options" : {
                 "n_rows" : 10
            }
        },{
            "id": "source",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "none" ],
            "field_type": "dropdown",
            "dropdown_options": {
				"options": [
					{
						"value": "pubseed",
						"display": "PubSEED (http://pubseed.theseed.org/)",
						"id": "pubseed",
						"ui-name": "PubSEED"
					},{
						"value": "coreseed",
						"display": "CoreSEED (highly curated representative genomes)",
						"id": "coreseed",
						"ui-name": "CoreSEED"
					},{
						"value": "patric",
						"display": "PATRIC (https://www.patricbrc.org/)",
						"id": "patric",
						"ui-name": "PATRIC"
					},{
						"value": "patricrefseq",
						"display": "PATRIC RefSeq (https://www.patricbrc.org/)",
						"id": "patricrefseq",
						"ui-name": "patricrefseq"
					}
				]
			}
		}
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name":"GenomeImporter",
            "method": "import_external_genome",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },{
                    "input_parameter": "genome_ids",
                    "target_property": "genome_ids"
                },{
                    "input_parameter": "source",
                    "target_property": "source"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },{
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },{
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
